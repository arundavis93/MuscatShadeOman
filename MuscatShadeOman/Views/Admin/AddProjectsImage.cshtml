                </div> <!--menu-->
                @*<div class="contact-top-menu">
                        <a href="tel:+968 95320008" class="phone-number">+968 95320008</a>
                        <a href="tel:+96879573230" class="phone-number second-phone">+96879573230</a>
                        <a href="mailto:muscatshadeint@gmail.com?Subject=Request%20from%20website" class="email-top">muscatshadeint@gmail.com</a>
                    </div> <!--contact top menu-->
                    <div class="res-menu" data-toggle="modal" data-target="#myModal">
                        <img src="~/images/right-menu.png" />
                    </div> <!--right-->*@

            </div>  <!--main in-->
        </div>
    </div>
    <!--menu end-->
    @using (Html.BeginForm("AddProjectsImage", "Admin",FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Change Projects Image</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    <select id="Type" name="Type" class="form-control" required>
                        <option value="select">select type</option>
                        <option value="fabric">fabric</option>
                        <option value="fabric">steel</option>
                        <option value="fabric">glazing</option>
                        <option value="fabric">crafting</option>
                        <option value="fabric">pergolas</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                </div>
                <input type="hidden" id="hidType" name="hidType" />
            </div>
    
           
    
            <div class="form-group">
                <label class="control-label col-md-2">Choose image</label>
                <div class="col-md-10">
                    
                    <input type="file" id="ImagePath" name="ImagePath" multiple="multiple" accept="image/x-png,image/jpeg" required />
                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    
</body>
</html>
<script>
        $(document).ready(function () {
            $("#Type").change(function () {
                varcityText = $("option:selected").text();
                $("#hidType").val(varcityText);
            });
            $('form').submit(function () {

                var drptext = $("option:selected").text();

                if (drptext === 'select type') {
                    alert('Please select a type');
                    return false;
                }
            });
        });
</script>
